.container {
  padding: 20rpx;
}

.duty-list {
  margin-bottom: 30rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.list-item {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.date {
  font-size: 30rpx;
  font-weight: bold;
}

.shift {
  font-size: 28rpx;
  color: #666;
}

.status {
  font-size: 28rpx;
  color: #07c160;
}

.status-cancel {
  color: #ff4d4f;
}

.item-footer {
  margin-top: 10rpx;
}

.remark {
  font-size: 26rpx;
  color: #666;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 20rpx;
}

.btn-mini {
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  color: #333;
} 